{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Action",
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "action_trigger_type": {
      "type": ["object", "null"],
      "properties": {
        "id": { "type": "integer" },
        "type_code": { "type": "string" },
        "lookup_code": { "type": ["string", "null"] },
        "lookup_value": { "type": ["string", "null"] }
      },
      "required": ["id", "type_code"],
      "additionalProperties": false
    },
    "config": { "type": ["object", "null"] },
    "data_table": {
      "type": ["object", "null"],
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "displayName": { "type": ["string", "null"] }
      },
      "required": ["id", "name"],
      "additionalProperties": false
    },
    "translations": {
      "type": ["object", "null"],
      "description": "Translations created along with the action",
      "properties": {
        "created": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "translation_key": { "type": "string" },
              "content": { "type": "string" },
              "created_at": { "type": "string", "format": "date-time" },
              "updated_at": { "type": "string", "format": "date-time" },
              "language": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer" },
                  "locale": { "type": "string" },
                  "language": { "type": "string" }
                },
                "required": ["id", "locale", "language"],
                "additionalProperties": false
              }
            },
            "required": ["id", "translation_key", "content", "created_at", "updated_at", "language"],
            "additionalProperties": false
          }
        },
        "updated": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "translation_key": { "type": "string" },
              "content": { "type": "string" },
              "created_at": { "type": "string", "format": "date-time" },
              "updated_at": { "type": "string", "format": "date-time" },
              "language": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer" },
                  "locale": { "type": "string" },
                  "language": { "type": "string" }
                },
                "required": ["id", "locale", "language"],
                "additionalProperties": false
              }
            },
            "required": ["id", "translation_key", "content", "created_at", "updated_at", "language"],
            "additionalProperties": false
          }
        }
      },
      "required": ["created", "updated"],
      "additionalProperties": false
    }
  },
  "required": ["id", "name"],
  "additionalProperties": false
}


