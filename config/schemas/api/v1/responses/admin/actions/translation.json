{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Action Translation",
  "properties": {
    "id": { "type": "integer" },
    "translation_key": { "type": "string" },
    "content": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "language": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "locale": { "type": "string" },
        "language": { "type": "string" }
      },
      "required": ["id", "locale", "language"],
      "additionalProperties": false
    }
  },
  "required": ["id", "translation_key", "content", "created_at", "updated_at", "language"],
  "additionalProperties": false
}
