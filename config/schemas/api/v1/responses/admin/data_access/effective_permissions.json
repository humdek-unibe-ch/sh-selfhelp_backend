{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Effective Permissions Response Schema",
    "description": "Schema for the admin/data-access/roles/{roleId}/effective-permissions endpoint response",
    "type": "object",
    "allOf": [
        { "$ref": "../../common/_response_envelope.json" }
    ],
    "properties": {
        "data": {
            "type": "object",
            "description": "Effective permissions for the role including user count",
            "properties": {
                "role_id": {
                    "type": "integer",
                    "description": "ID of the role"
                },
                "users_with_role": {
                    "type": "integer",
                    "description": "Number of users who have this role",
                    "minimum": 0
                },
                "effective_permissions": {
                    "type": "array",
                    "description": "Effective permissions for this role (may be unified across multiple users)",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id_roles": {
                                "type": "integer",
                                "description": "Role ID"
                            },
                            "role_name": {
                                "type": "string",
                                "description": "Name of the role"
                            },
                            "id_resourceTypes": {
                                "type": ["integer", "null"],
                                "description": "Resource type ID"
                            },
                            "resource_id": {
                                "type": ["integer", "null"],
                                "description": "Resource ID"
                            },
                            "resource_type_name": {
                                "type": ["string", "null"],
                                "description": "Name of the resource type"
                            },
                            "unified_permissions": {
                                "type": ["integer", "null"],
                                "description": "Bitwise unified permissions across users",
                                "minimum": 1,
                                "maximum": 15
                            },
                            "individual_permissions": {
                                "type": ["string", "null"],
                                "description": "Comma-separated list of individual permission values"
                            }
                        },
                        "required": ["id_roles", "role_name"]
                    }
                }
            },
            "required": ["role_id", "users_with_role", "effective_permissions"]
        }
    },
    "required": ["data"]
}
