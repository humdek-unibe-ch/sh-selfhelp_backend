{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Update CMS Preferences Request",
  "description": "Schema for updating CMS preferences",
  "properties": {
    "callback_api_key": {
      "type": ["string", "null"],
      "maxLength": 500,
      "description": "Callback API key"
    },
    "default_language_id": {
      "type": ["integer", "null"],
      "minimum": 1,
      "description": "Default language ID"
    },
    "anonymous_users": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1,
      "description": "Allow anonymous users (0 or 1)"
    },
    "firebase_config": {
      "type": ["string", "null"],
      "maxLength": 10000,
      "description": "Firebase configuration JSON"
    },
    "default_timezone": {
      "type": "string",
      "maxLength": 50,
      "description": "Default timezone code (e.g., Europe/Zurich, UTC, America/New_York)"
    }
  },
  "additionalProperties": false
} 