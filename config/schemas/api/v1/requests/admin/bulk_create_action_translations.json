{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Bulk Create Action Translations Request",
  "additionalProperties": false,
  "required": ["translations"],
  "properties": {
    "translations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["translation_key", "id_languages", "content"],
        "properties": {
          "translation_key": {
            "type": "string",
            "minLength": 1,
            "description": "Unique key for the translatable content"
          },
          "id_languages": {
            "type": "integer",
            "minimum": 1,
            "description": "Language ID for the translation"
          },
          "content": {
            "type": "string",
            "description": "The localized content"
          }
        }
      }
    }
  }
}
