{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Role Data Access Entity Schema",
    "description": "Schema for a single RoleDataAccess entity representing custom permissions for a role",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "Unique identifier for the role permission entry"
        },
        "idRoles": {
            "type": "integer",
            "description": "ID of the role this permission applies to"
        },
        "idResourceTypes": {
            "type": "integer",
            "description": "ID of the resource type this permission applies to"
        },
        "resourceId": {
            "type": "integer",
            "description": "ID of the specific resource this permission applies to"
        },
        "crudPermissions": {
            "type": "integer",
            "description": "Bitwise CRUD permissions (1=CREATE, 2=READ, 4=UPDATE, 8=DELETE)",
            "minimum": 1,
            "maximum": 15,
            "default": 2
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the permission was created"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the permission was last updated"
        },
        "role": {
            "type": "object",
            "description": "Role this permission applies to",
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Role ID"
                },
                "name": {
                    "type": "string",
                    "description": "Role name"
                },
                "description": {
                    "type": ["string", "null"],
                    "description": "Role description"
                }
            },
            "required": ["id", "name"]
        },
        "resourceType": {
            "$ref": "./lookupEntity.json",
            "description": "Type of resource this permission applies to"
        }
    },
    "required": ["id", "idRoles", "idResourceTypes", "resourceId", "crudPermissions", "createdAt", "updatedAt"]
}
